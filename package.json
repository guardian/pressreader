	},
	"dependencies": {
		"@types/jest": "^29.2.3",
		"@types/node": "^18.11.11",
		"jest": "^29.3.1",
		"ts-jest": "^29.0.3",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.3"
	},
	"eslintConfig": {
		"extends": "@guardian/eslint-config-typescript",
		"plugins": [
			"prettier"
		],
		"rules": {
			"prettier/prettier": "error"
		}
	},
	"eslintIgnore": [
		"packages/common/dist"
